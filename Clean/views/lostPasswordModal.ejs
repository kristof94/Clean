<form id="lost-form" style="display:none;">
    <div class="modal-header">
        <div class="modal-body mx-11">
            <div class="modalTitle">Mot de passe oublié ?</div>
        </div>
        <div class="modal-body mx-1">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
    </div>
    <div class="modal-body">
        <div class="mx-3">
            <div class="md-form mb-6">
                <i class="fa fa-envelope prefix grey-text"></i>
                <input id="lost_email" class="form-control" type="text" placeholder="E-Mail" required>
                <label data-error="Email incorrect" data-success="right" for="lost_email">Your
                    email</label>
            </div>
            <div class="row">

                <div class=" mb-12">
                    <a id="lost_login_btn" class="btn main-btn pull-right btn-custom waves-effect waves-light">Se
                        connecter</a>
                    <button type="submit" class="btn main-btn pull-right btn-custom waves-effect waves-light">Réinitialiser
                        mon mot de passe</button>
                </div>
            </div>
        </div>
    </div>
</form>